{
    "manifest_version": 2,
    "name": "Inverter Cores",
    "version": "1.3",
    "homepage_url": "https://github.com/marcelbonnet/firefox-godark",
    "author" : "Marcel Bonnet",
    "description" : "Inverte as cores das páginas, desde que não tenham sido adicionadas à lista de domínios ignorados.",

    "browser_action": {
        "default_icon": "images/branco.png",
        "default_title": "Inverter Cores",
        "browser_style": true
    },


    "background": {
		"scripts": ["background.js"]
    },


    "permissions": [
        "sessions",
        "tabs",
        "storage",
        "contextMenus",
        "<all_urls>"
    ]
}
